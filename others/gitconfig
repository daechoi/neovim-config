[user]
  name = Esa-Matti Suuronen
  email = esa-matti@suuronen.org
[github]
  user = epeli
[apply]
  whitespace = nowarn
[branch]
  autosetuprebase = always
  autosetupmerge = always
[color]
  branch = auto
  diff = auto
  status = auto
  ui = true
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[alias]
  st = status
  ci = commit
  l = log --graph --pretty=format:'%C(yellow)%h%C(cyan)%d%Creset %s %C(white)- %an, %ar%Creset'
  ll = log --stat --abbrev-commit
  # Sorted tag list
  stag = for-each-ref --sort='*authordate' --format='%(refname:short)' refs/tags
  rh = reset HEAD
  stash-rebase = "!f() { git stash && git rebase -i origin/${1-master} && git stash pop; }; f"
[init]
	templatedir = ~/.vim/others/git_template
[filter "epelihidegit"]
  clean = sed -e '/epelihidegit/d'
