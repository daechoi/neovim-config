snippet doc "HTML 5 document skeleton" !b
<!doctype html>
<html>
    <head>
        <meta charset="utf-8">
        <title>${1}</title>
    </head>
    <body>
    ${2}
    </body>
</html>
endsnippet

snippet < "A simple HTML tag" !w
<${1:div}>
${2}
</${1/(\w+).*/$1/}>
endsnippet


snippet script "<script>" !w
<script src="${1}" charset="utf-8"></script>
endsnippet
